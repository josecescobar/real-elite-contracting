<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Real Elite Contracting</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEliteContractingWebsite1.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3" aria-label="Main Navigation">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Real Elite Contracting</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                <ul class="navbar-nav flex-grow-1">
                    <!-- Added active link logic -->
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"].ToString() == "Services" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Services">Our Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"].ToString() == "Portfolio" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Portfolio">Portfolio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"].ToString() == "Testimonials" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["action"].ToString() == "GetQuote" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="GetQuote">Get a Quote</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<footer class="border-top footer text-muted mt-4">
    <div class="container py-4">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5>About Real Elite Contracting</h5>
                <p>We specialize in high-quality home remodeling services that transform spaces into beautiful, functional areas for you and your family to enjoy.</p>
            </div>
            <div class="col-md-4 mb-3">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a class="text-muted" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="text-muted" asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                    <li><a class="text-muted" asp-area="" asp-controller="Home" asp-action="Services">Our Services</a></li>
                    <li><a class="text-muted" asp-area="" asp-controller="Home" asp-action="Portfolio">Portfolio</a></li>
                    <li><a class="text-muted" asp-area="" asp-controller="Home" asp-action="Testimonials">Testimonials</a></li>
                    <li><a class="text-muted" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li><a class="text-muted" asp-area="" asp-controller="Home" asp-action="GetQuote">Get a Quote</a></li>
                </ul>
            </div>
            <div class="col-md-4 mb-3">
                <h5>Contact Information</h5>
                <address>
                    Real Elite Contracting<br />
                    Email: <a href="mailto:info@realelitecontracting.com">info@realelitecontracting.com</a><br />
                    Phone: (555) 123-4567
                </address>
                <h5 class="mt-3">Follow Us</h5>
                <a href="https://facebook.com" target="_blank"><img src="~/images/facebook-icon.png" alt="Facebook" width="30"></a>
                <a href="https://instagram.com" target="_blank"><img src="~/images/instagram-icon.png" alt="Instagram" width="30" class="ms-2"></a>
                <a href="https://twitter.com" target="_blank"><img src="~/images/twitter-icon.png" alt="Twitter" width="30" class="ms-2"></a>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
