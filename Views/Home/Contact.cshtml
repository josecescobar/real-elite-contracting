@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <!-- Contact Information -->
    <h2 class="text-center mb-4">Contact Us</h2>
    <p class="text-center">If you have any questions or would like to request an estimate, please reach out to us using the form below or contact us directly using the information provided.</p>

    <div class="row">
        <!-- Contact Form Section -->
        <div class="col-md-6">
            <form method="post" action="/Home/Contact" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" required aria-required="true" placeholder="John Doe" />
                    <div class="invalid-feedback">Please enter your name.</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" name="email" required aria-required="true" placeholder="john.doe@example.com" />
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                </div>

                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required aria-required="true" placeholder="Write your message here..."></textarea>
                    <div class="invalid-feedback">Please provide a message.</div>
                </div>

                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>

            <!-- Success Message -->
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.Message
                </div>
            }
        </div>

        <!-- Additional Contact Information Section -->
        <div class="col-md-6">
            <h4>Our Contact Information</h4>
            <address>
                <strong>Real Elite Contracting</strong><br />
                123 Main Street, Anytown, USA<br />
                Email: <a href="mailto:info@realelitecontracting.com">info@realelitecontracting.com</a><br />
                Phone: (555) 123-4567<br />
            </address>
            <h4>Our Location</h4>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.5762594068124!2d-122.41941548468156!3d37.77492977975838!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085809c5f41b5fd%3A0xe4b80f4fdcc073ab!2s123+Main+St%2C+San+Francisco%2C+CA+94105%2C+USA!5e0!3m2!1sen!2sus!4v1619034787833!5m2!1sen!2sus" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>
