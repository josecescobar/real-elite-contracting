@{
    ViewData["Title"] = "Home Page";
}

<!-- Welcome Section -->
<div class="text-center mt-5">
    <h1 class="display-4">Welcome to Real Elite Contracting</h1>
    <p class="lead">Your trusted partner for high-quality home remodeling services.</p>
</div>

<!-- Carousel Section -->
<div id="projectCarousel" class="carousel slide mt-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/kitchen_remodel.jpg" class="d-block w-100" alt="Kitchen Remodel">
            <div class="carousel-caption d-none d-md-block">
                <h5>Beautiful Kitchen Remodel</h5>
                <p>Transforming an outdated kitchen into a modern, functional space.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/bathroom_renovation.jpg" class="d-block w-100" alt="Bathroom Renovation">
            <div class="carousel-caption d-none d-md-block">
                <h5>Luxurious Bathroom Upgrade</h5>
                <p>Turn your bathroom into a relaxing spa-like retreat.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/outdoor_patio.jpg" class="d-block w-100" alt="Outdoor Patio">
            <div class="carousel-caption d-none d-md-block">
                <h5>Outdoor Patio Space</h5>
                <p>Extend your living area to the outdoors with custom pavers and a fire pit.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#projectCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#projectCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>

<!-- Services Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Our Services</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <h3>Kitchen Remodeling</h3>
            <p>Transform your kitchen into a modern, functional, and beautiful space. Our expert team will work with you to bring your vision to life.</p>
        </div>
        <div class="col-md-4">
            <h3>Bathroom Renovations</h3>
            <p>Upgrade your bathroom with custom designs, new fixtures, and beautiful tile work. We make your bathroom a relaxing, spa-like retreat.</p>
        </div>
        <div class="col-md-4">
            <h3>Room Additions</h3>
            <p>Need more space? We provide room addition services that blend seamlessly with your home’s existing design.</p>
        </div>
    </div>

    <div class="row mt-4 g-4">
        <div class="col-md-4">
            <h3>Flooring & Painting</h3>
            <p>Revitalize your home with new flooring and a fresh coat of paint. We offer a variety of options to match your style and preferences.</p>
        </div>
        <div class="col-md-4">
            <h3>Custom Designs</h3>
            <p>From custom cabinetry to built-in shelving, our team is here to deliver unique, personalized solutions for your home.</p>
        </div>
        <div class="col-md-4">
            <h3>Contact Us Today!</h3>
            <p>Ready to start your remodeling project? <a asp-controller="Home" asp-action="Contact">Contact us</a> today for a free consultation and estimate.</p>
        </div>
    </div>
</div>

<!-- Testimonials Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">What Our Clients Say</h2>
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <blockquote class="blockquote">
                        <p>"Real Elite Contracting transformed our outdated kitchen into a beautiful, modern space. The team was professional, on time, and stayed within our budget. Highly recommended!"</p>
                        <footer class="blockquote-footer">Sarah T.</footer>
                    </blockquote>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <blockquote class="blockquote">
                        <p>"We couldn't be happier with our new bathroom. They made the whole process easy, and the results are simply stunning. We'll definitely use them for our next project."</p>
                        <footer class="blockquote-footer">James W.</footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="text-center mt-5 mb-5">
    <h2>Ready to Get Started?</h2>
    <p>Contact us today for a free consultation, and let's bring your home remodeling dreams to life!</p>
    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="GetQuote">Get a Quote</a>
</div>
